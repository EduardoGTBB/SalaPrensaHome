<script>
var $_GET = $.requestParams();

var isFirstLoad = true;


$("a[href='#Campanias']").on("click", function(evt) {
    if (!$(this).parent().hasClass("active"))
        showCampanias();
})

function showCampanias() {

    if (isFirstLoad) {
        $('#Campania1').toggle("slow", function() {
            $("a[href='#Campanias']").parent().addClass("active");
            $('.carousel').carousel(0);
            $('.carousel').carousel("pause");
            $('#dataRowId1').attr("src", "img/campanias/guias2-banner-interno.png");

            $(".carousel-indicators").hide();
            $(".carousel-control").hide();
            $('.carousel').carousel({
                interval: false,

            });
            $('#Campania2').toggle("400", function() {
                $(".title-divider.prensa").toggle();
            });
        });

        isFirstLoad = false;
    } else
        window.location.href = "index.htm";
}

